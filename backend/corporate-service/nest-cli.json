{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            {
                "include": "mail/templates/*.html",
                "outDir": "dist/mail/templates",
                "watchAssets": true
            }
        ]
    }
}